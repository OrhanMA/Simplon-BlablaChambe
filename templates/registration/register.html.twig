{% extends 'base.html.twig' %} {% block title %}Register{% endblock %} {% block
body %}
<div class="flex flex-nowrap w-full">
  <div class="pl-6 flex items-center w-1/2 bg-no-repeat bg-contain">
    <img src="{{ asset('./images/road-trip.webp') }}" alt="" />
  </div>
  <div class="w-1/2 pt-32 mb-20 flex flex-col items-center">
    <h1 class="text-lg mb-10 leading-[3rem]">
      <span class="text-5xl font-bold">Bienvenue,</span> <br />
      Veuillez remplir le formulaire pour vous inscrire:
    </h1>

    {{ form_start(registrationForm) }}
    {# {{ form_row(registrationForm.email) }}
    {{
      form_row(registrationForm.plainPassword, {
        label: "Password"
      })
    }}
    #} {#
    <div class="font-medium border-b-2">
      {{ form_row(registrationForm.first_name) }}
    </div>
    #}
    <div class="flex gap-12">
      <div class="text-lg font-medium border-b-2 flex flex-col mb-4 pb-4">
        <label
          for="{{ registrationForm.first_name.vars.id }}"
          class="font-medium"
          >Prénom</label
        >
        {{
          form_widget(registrationForm.first_name, {
            attr: {
              class:
                "flex flex-col mt-2 rounded-md border-2 border-black focus:outline-sky-300 focus:bg-white"
            }
          })
        }}
      </div>
      <div class="text-lg font-medium border-b-2 flex flex-col mb-4 pb-4">
        <label
          for="{{ registrationForm.last_name.vars.id }}"
          class="font-medium"
          >Nom</label
        >
        {{
          form_widget(registrationForm.last_name, {
            attr: {
              class:
                "flex flex-col mt-2 rounded-md border-2 border-black focus:outline-sky-300 focus:bg-white"
            }
          })
        }}
      </div>
    </div>
    <div class="flex gap-12">
      <div class="text-lg font-medium border-b-2 flex flex-col mb-4 pb-4">
        <label for="{{ registrationForm.email.vars.id }}" class="font-medium"
          >Email</label
        >
        {{
          form_widget(registrationForm.email, {
            attr: {
              class:
                "flex flex-col mt-2 rounded-md border-2 border-black focus:outline-sky-300 focus:bg-white"
            }
          })
        }}
      </div>
      <div class="text-lg font-medium border-b-2 flex flex-col mb-4 pb-4">
        <label for="{{ registrationForm.phone.vars.id }}" class="font-medium"
          >Téléphone</label
        >
        {{
          form_widget(registrationForm.phone, {
            attr: {
              class:
                "flex flex-col mt-2 rounded-md border-2 border-black focus:outline-sky-300 focus:bg-white"
            }
          })
        }}
      </div>
    </div>
    <div class="flex justify-center text-center">
      <div class="text-lg font-medium border-b-2 flex flex-col mb-4 pb-4">
        <label
          for="{{ registrationForm.plainPassword.vars.id }}"
          class="font-medium"
          >Mot de passe</label
        >
        {{
          form_widget(registrationForm.plainPassword, {
            attr: {
              class:
                "flex flex-col mt-2 rounded-md border-2 border-black focus:outline-sky-300 focus:bg-white"
            }
          })
        }}
      </div>
    </div>
    <div class="flex justify-center">
      <div
        class="text-xl font-medium flex flex-row justify-center items-center gap-6 p-4"
      >
        <label
          for="{{ registrationForm.agreeTerms.vars.id }}"
          class="text-sm font-normal"
          >J'accepte les conditions générales d'utilisation</label
        >
        {{
          form_widget(registrationForm.agreeTerms, {
            attr: {
              class: ""
            }
          })
        }}
      </div>
    </div>
    <div class="flex justify-center">
      <button
        type="submit"
        class="btn text-lg text-white bg-black py-2 px-6 rounded-full m-8 border-black border-2"
      >
        Créer mon compte
      </button>
    </div>
    {{ form_end(registrationForm) }}
  </div>
</div>
{% endblock %}
