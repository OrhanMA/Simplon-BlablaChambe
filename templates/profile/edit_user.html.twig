{% extends 'base.html.twig' %} {% block title %}Modifier les informations
utilisateur{% endblock %} {% block body %}
<div class="pt-32 p-6 gap-6 flex flex-col items-center">
  <a class="flex flex-start bg-sky-400 px-2 py-1 rounded-xl text-white" href={{path('app_profile')}}>Revenir à la page profil.</a>

  <h1 class="text-2xl">Bonjour, <span class="font-bold"> {{ user.firstName }} {{ user.lastName }}</span></h1>
  <h2 class="text-xl">
    Veuillez remplir le formulaire pour modifier vos informations:
  </h2>
  {{ form_start(form) }}
  <div class="flex flex-col items-center">
    <div class="flex flex-col gap-12">
      <div class="text-lg  border-b-2 flex flex-col mb-4 pb-4">
        <label for="{{ form.firstName.vars.id }}" class=""
          >Prénom</label
        >
        {{
          form_widget(form.firstName, {
            attr: {
              class:
                "p-1 flex flex-col mt-2 rounded-md border-2 border-black focus:outline-sky-300 focus:bg-white"
            }
          })
        }}
      </div>
      <div class="text-lg  border-b-2 flex flex-col mb-4 pb-4">
        <label for="{{ form.lastName.vars.id }}" class="">Nom</label>
        {{
          form_widget(form.lastName, {
            attr: {
              class:
                "p-1 flex flex-col mt-2 rounded-md border-2 border-black focus:outline-sky-300 focus:bg-white"
            }
          })
        }}
      </div>
      <div class="text-lg  border-b-2 flex flex-col mb-4 pb-4">
        <label for="{{ form.email.vars.id }}" class="">Email</label>
        {{
          form_widget(form.email, {
            attr: {
              class:
                "p-1 flex flex-col mt-2 rounded-md border-2 border-black focus:outline-sky-300 focus:bg-white"
            }
          })
        }}
      </div>
      <div class="text-lg  border-b-2 flex flex-col mb-4 pb-4">
        <label for="{{ form.phone.vars.id }}" class=""
          >Téléphone</label
        >
        {{
          form_widget(form.phone, {
            attr: {
              class:
                "p-1 flex flex-col mt-2 rounded-md border-2 border-black focus:outline-sky-300 focus:bg-white"
            }
          })
        }}
      </div>
    </div>
    <button
      type="submit"
      class="btn text-lg text-white bg-black py-2 px-6 rounded-full m-8 border-black border-2"
    >
      Confirmer les modifications
    </button>
  </div>
  {# {{ form_widget(form) }} #}
  {{ form_end(form) }}
</div>
{% endblock %}
