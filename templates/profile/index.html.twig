{% extends 'base.html.twig' %} {% block title %}Profil{% endblock %} {% block
body %}
<div class="pt-32 p-6 gap-6 flex flex-col">
  <h1 class="font-bold text-4xl">Mon profil</h1>
  {# echo user id: {{ dump(userId) }}
  {{ dump(user) }}
  {{ dump(cars) }}
  {{ dump(rides) }} #}

  <div class="flex flex-row flex-wrap gap-12">
    <div class="w-2/5">
      <div class="flex items-center gap-6 mb-10">
        <h2
        class="text-md sm:text-xl font-bold underline underline-offset-[5px] decoration-stone-700 "
        >
        Mes infos
        </h2>
        <a class="cursor-pointer border-2 border-stone-400 text-stone-600 text-sm px-2 py-1 rounded-lg" href={{ path('app_edit_user') }}>Edit</a>
      </div>
      <div class="flex flex-col gap-4 mb-4">
        <p
          class="text-md sm:text-lg w-1/2 font-semibold underline decoration-stone-400 underline-offset-[5px]"
        >
          Prénom
        </p>
        <p class="text-md sm:text-lg">
          {{ user.firstName }}
        </p>
      
      </div>
      <div class="flex flex-col gap-4 mb-4">
        <p
          class="text-md sm:text-lg w-1/2 font-semibold underline decoration-stone-400 underline-offset-[5px]"
        >
          Nom
        </p>
        <p class="text-md sm:text-lg">{{ user.lastName }}</p>
      </div>
      <div class="flex flex-col gap-4 mb-4">
        <p
          class="text-md sm:text-lg w-1/2 font-semibold underline decoration-stone-400 underline-offset-[5px]"
        >
          Téléphone
        </p>
        <p class="text-md sm:text-lg">{{ user.phone }}</p>
      </div>
      <div class="flex flex-col gap-4 mb-4">
        <p
          class="text-md sm:text-lg w-1/2 font-semibold underline decoration-stone-400 underline-offset-[5px]"
        >
          Email
        </p>
        <p class="text-md sm:text-lg">{{ user.email }}</p>
      </div>
    </div>
    <div class="w-2/5">
      <div class="flex items-center gap-6 mb-10">
        <h2
        class="text-md sm:text-xl font-bold underline underline-offset-[5px] decoration-stone-700 "
        >
        Mes voitures
        </h2>
        <a
        href={{ path('app_add_car') }}
        class="cursor-pointer border-2 border-stone-400 text-stone-600  text-sm px-2 py-1 rounded-lg"
        >
        Ajouter
        </a>
      </div>
      <div class="flex flex-wrap">
        {% for car in cars %}
        <div class="flex items-center">

        
        <div class="flex gap-6">
          <div class="flex flex-col gap-4 mb-4 w-full">
            <p
              class="text-md sm:text-lg w-1/2 font-semibold underline decoration-stone-400 underline-offset-[5px]"
            >
              Marque
            </p>
            <p class="text-md sm:text-lg">{{ car.brand }}</p>
          </div>
          <div class="flex flex-col gap-4 mb-4">
            <p
              class="text-md sm:text-lg w-1/2 font-semibold underline decoration-stone-400 underline-offset-[5px]"
            >
              Modèle
            </p>
            <p class="text-md sm:text-lg">{{ car.model }}</p>
          </div>
          <div class="flex flex-col gap-4 mb-4">
            <p
              class="text-md sm:text-lg w-1/2 font-semibold underline decoration-stone-400 underline-offset-[5px]"
            >
              Places
            </p>
            <p class="text-md sm:text-lg">{{ car.seats }}</p>
          </div>
        </div>
          <a class=" m-4 flex rounded-xl items-center text-sm h-12 px-1 py-0 border-2 border-stone-400" href={{ path('app_edit_car', {'id': car.id}) }}>Modifier</a>
          <a class=" m-4 flex rounded-xl items-center text-sm h-12 px-1 py-0 border-2 border-red-600" href={{ path('app_delete_car', {'id': car.id}) }}>Supprimer</a>
        </div>
      {% endfor %}
      </div>
      
      
    </div>
    <div class="w-2/5">
      <div class="flex items-center gap-6 mb-10">
        <h2
          class="text-md sm:text-xl font-bold underline underline-offset-[5px] decoration-stone-700 "
        >
          Mes trajets
        </h2>
        <a
          href={{ path('app_add_ride') }}
          class="cursor-pointer border-2 border-stone-400 text-sm text-stone-600 px-2 py-1 rounded-lg"
          >
          Ajouter
          </a>
      </div>
      {% for ride in rides %}
      <div class="flex flex-col gap-4 mb-4">
        <p
          class="text-md sm:text-lg w-1/2 font-semibold underline decoration-stone-400 underline-offset-[5px]"
        >
          Trajet ID#{{ ride.id }}
        </p>
        <div class="flex items-center">
          <div class="flex items-center gap-6 text-md sm:text-lg">
            <p>{{ ride.date|date("d/m/Y") }}:</p>
            <p>{{ ride.departure }}</p>
            <p>vers</p>
            <p class=" border-r-2 border-black pr-6">{{ ride.destination }}</p>
            <p class=" border-r-2 border-black pr-6">{{ ride.price }}€</p>
          </div>
          <div class="flex">
            <a class=" m-4 flex rounded-xl items-center h-12 px-1 text-sm border-2 border-stone-400" href={{ path('app_edit_ride', {'id': ride.id}) }}>Modifier</a>
            <a class=" m-4 flex rounded-xl items-center h-12 px-1 text-sm border-2 border-red-600" href={{ path('app_delete_ride', {'id': ride.id}) }}>Supprimer</a>
          </div>
        </div>

      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
