{% extends 'base.html.twig' %} {% block title %}Profil{% endblock %} {% block
body %}
<div class="pt-32 p-6 gap-6 flex flex-col">
  <h1 class="font-bold text-4xl">Mon profil</h1>
  echo user id: {{ dump(userId) }}
  {{ dump(user) }}
  {{ dump(cars) }}
  {{ dump(rides) }}

  <div class="flex flex-row flex-wrap gap-12">
    <div class="w-2/5">
      <div class="flex items-center gap-6 mb-4">
        <h2
        class="text-3xl mb-5 font-bold underline underline-offset-[5px] decoration-stone-700"
        >
        Mes infos
        </h2>
        <a class="cursor-pointer border-2 border-stone-400 text-stone-600 px-4 py-2 rounded-lg" href={{ path('app_edit_user') }}>Edit</a>
      </div>
      <div class="flex flex-col gap-4 mb-4">
        <p
          class="text-2xl w-1/2 font-semibold underline decoration-stone-400 underline-offset-[5px]"
        >
          Prénom
        </p>
        <p class="text-xl">
          {{ user.firstName }}
        </p>
      
      </div>
      <div class="flex flex-col gap-4 mb-4">
        <p
          class="text-2xl w-1/2 font-semibold underline decoration-stone-400 underline-offset-[5px]"
        >
          Nom
        </p>
        <p class="text-xl">{{ user.lastName }}</p>
      </div>
      <div class="flex flex-col gap-4 mb-4">
        <p
          class="text-2xl w-1/2 font-semibold underline decoration-stone-400 underline-offset-[5px]"
        >
          Téléphone
        </p>
        <p class="text-xl">{{ user.phone }}</p>
      </div>
      <div class="flex flex-col gap-4 mb-4">
        <p
          class="text-2xl w-1/2 font-semibold underline decoration-stone-400 underline-offset-[5px]"
        >
          Email
        </p>
        <p class="text-xl">{{ user.email }}</p>
      </div>
    </div>
    <div class="w-2/5">
      <div class="flex items-center gap-6 mb-4">
        <h2
        class="text-3xl mb-5 font-bold underline underline-offset-[5px] decoration-stone-700"
        >
        Mes voitures
        </h2>
        <a
        href={{ path('app_add_car') }}
        class="cursor-pointer border-2 border-stone-400 text-stone-600 px-4 py-2 rounded-lg"
        >
        Ajouter une voiture
        </a>
      </div>
      <div class="flex flex-wrap">
        {% for car in cars %}
        <div class="flex items-center">

        
        <div class="flex gap-6">
          <div class="flex flex-col gap-4 mb-4 w-full">
            <p
              class="text-2xl w-1/2 font-semibold underline decoration-stone-400 underline-offset-[5px]"
            >
              Marque
            </p>
            <p class="text-xl">{{ car.brand }}</p>
          </div>
          <div class="flex flex-col gap-4 mb-4">
            <p
              class="text-2xl w-1/2 font-semibold underline decoration-stone-400 underline-offset-[5px]"
            >
              Modèle
            </p>
            <p class="text-xl">{{ car.model }}</p>
          </div>
          <div class="flex flex-col gap-4 mb-4">
            <p
              class="text-2xl w-1/2 font-semibold underline decoration-stone-400 underline-offset-[5px]"
            >
              Places
            </p>
            <p class="text-xl">{{ car.seats }}</p>
          </div>
        </div>
          <a class=" m-4 flex rounded-xl items-center h-12 px-2 border-2 border-stone-400" href={{ path('app_edit_car', {'id': car.id}) }}>Modifier</a>
          <a class=" m-4 flex rounded-xl items-center h-12 px-2 border-2 border-red-600" href={{ path('app_delete_car', {'id': car.id}) }}>Supprimer</a>
        </div>
      {% endfor %}
      </div>
      
      
    </div>
    <div class="w-2/5">
      <h2
        class="text-3xl mb-5 font-bold underline underline-offset-[5px] decoration-stone-700"
      >
        Mes trajets
      </h2>
      {% for ride in rides %}
      <div class="flex flex-col gap-4 mb-4">
        <p
          class="text-2xl w-1/2 font-semibold underline decoration-stone-400 underline-offset-[5px]"
        >
          Trajet #{{ ride.id }}
        </p>
        <div class="flex gap-6">
          <p class="text-xl">Le {{ ride.date|date("d/m/Y") }}:</p>
          <p class="text-xl">{{ ride.departure }}</p>
          <p class="text-xl">-------</p>
          <p class="text-xl">{{ ride.destination }}</p>
          <p class="text-xl">{{ ride.price }} euros</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
