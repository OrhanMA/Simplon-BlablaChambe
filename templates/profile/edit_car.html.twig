{% extends 'base.html.twig' %} {% block title %}Modifier une voiture{% endblock
%} {% block body %}

{{ dump(car) }}
<div class="pt-32 p-6 gap-6 flex flex-col items-center font-bold">
  <h1 class="text-4xl">Bonjour, {{ user.firstName }} {{ user.lastName }}</h1>
  <h2 class="text-3xl">
    Veuillez remplir le formulaire pour modifier cette voiture:
  </h2>
  {{ form_start(form) }}
  <div class="flex flex-col items-center">
    <div class="flex gap-12">
      <div class="text-lg font-medium border-b-2 flex flex-col mb-4 pb-4">
        <label for="{{ form.brand.vars.id }}" class="font-medium">Marque</label>
        {{
          form_widget(form.brand, {
            attr: {
              class:
                "flex flex-col mt-2 rounded-md border-2 border-black focus:outline-sky-300 focus:bg-white"
            }
          })
        }}
      </div>
      <div class="text-lg font-medium border-b-2 flex flex-col mb-4 pb-4">
        <label for="{{ form.model.vars.id }}" class="font-medium">Mod√®le</label>
        {{
          form_widget(form.model, {
            attr: {
              class:
                "flex flex-col mt-2 rounded-md border-2 border-black focus:outline-sky-300 focus:bg-white"
            }
          })
        }}
      </div>
      <div class="text-lg font-medium border-b-2 flex flex-col mb-4 pb-4">
        <label for="{{ form.seats.vars.id }}" class="font-medium">Places</label>
        {{
          form_widget(form.seats, {
            attr: {
              class:
                "flex flex-col mt-2 rounded-md border-2 border-black focus:outline-sky-300 focus:bg-white"
            }
          })
        }}
      </div>
    </div>
    <button
      type="submit"
      class="btn text-lg text-white bg-black py-2 px-6 rounded-full m-8 border-black border-2"
    >
      Confirmer les modifications
    </button>
  </div>
  {# {{ form_widget(form) }} #}
  {{ form_end(form) }}
</div>
{% endblock %}
