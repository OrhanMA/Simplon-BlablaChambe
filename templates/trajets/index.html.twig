{% extends 'base.html.twig' %} {% block title %}Trajets{% endblock %} {% block
body %} {# {{ dump(rides[0]) }} {{ dump(users[0].firstName) }} #}

<div class="shiny pt-32 pb-20 text-stone-50">
  {% for ride in rides %}
  <div class="flex flex-col items-center">
    <div
      class="card text-white w-3/5 max-w-[95%] flex rounded-xl justify-center gap-12 items-center px-6 py-4 m-2 border-2 border-black"
    >
      <div class="flex flex-col justify-center items-center gap-4">
        <img
          class="rounded-full border-2 border-neutral-600"
          width="100"
          src="{{ asset('./images/julienfaketete.jpeg') }}"
          alt="ia
        face"
        />
        <p class="text-xl font-bold">{{ ride.driver.firstName }}</p>
      </div>
      <div class="flex-col justify-center items-center">
        <div class="flex items-center justify-between font-bold mb-5">
          <p class="underline">Le {{ ride.date|date("d/m/Y") }}</p>
          <p class="text-2xl text-green-500">{{ ride.price }}€</p>
        </div>
        <div class="flex justify-center gap-4 mb-10">
          <p class="text-lg">
            Départ: <span class="font-bold text-2xl">{{ ride.departure }}</span>
          </p>

          <p class="text-lg">
            Arrivée:
            <span class="font-bold text-2xl">{{ ride.destination }}</span>
          </p>
        </div>
        <div class="flex justify-center gap-4 text-2xl"></div>
        <div class="flex items-center justify-around gap-6">
          {% if ride.seats == 1 %}
          <p class="text-xl font-semibold">{{ ride.seats }} place restante</p>
          {% else %}
          <p class="text-xl font-semibold">{{ ride.seats }} places restantes</p>
          {% endif %}
          <button
            class="bg-green-500 text-white border-2 border-gray-300 py-2 px-6 rounded-full text-sm"
          >
            Réserver
          </button>
          <a
            href="/trajets/detail/{{ ride.id }}"
            class="bg-neutral-800 text-white border-2 border-neutral-700 py-2 px-6 rounded-full text-sm"
          >
            Détails
          </a>
        </div>
      </div>
    </div>
  </div>
  {% endfor %}
</div>
{% endblock %}
